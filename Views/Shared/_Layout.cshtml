<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - System rezerwacji hoteli</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Projekt.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">

                <!-- Lewa strona -->
                <div class="d-flex align-items-center gap-3">

                    <!-- Logo -->
                    <a class="navbar-brand me-4"
                       asp-area=""
                       asp-controller="Home"
                       asp-action="Index">
                        System rezerwacji hoteli
                    </a>

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <!-- Rezerwacje - widoczne dla wszystkich zalogowanych -->
                        <a class="nav-link text-dark"
                           asp-controller="Reservations"
                           asp-action="Index">
                            Rezerwacje
                        </a>

                        @* Widoczne tylko dla administratora *@
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="nav-link text-dark"
                               asp-controller="Hotels"
                               asp-action="Index">
                                Hotele
                            </a>

                            <a class="nav-link text-dark"
                               asp-controller="Rooms"
                               asp-action="Index">
                                Pokoje
                            </a>
                        }
                    }

                </div>

                <!-- Prawa strona -->
                <div>
                    <div>
                        <ul class="navbar-nav flex-row align-items-center gap-3">
                            <partial name="_LoginPartial" />
                        </ul>
                    </div>
                </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Dominik Czechowicz s171932
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
