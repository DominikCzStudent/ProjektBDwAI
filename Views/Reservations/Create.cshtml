@model Projekt.Models.Reservation

@{
    ViewData["Title"] = "Nowa rezerwacja";
}

<h1>@ViewData["Title"]</h1>

<h4>Szczegóły rezerwacji</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FromDate" class="control-label"></label>
                <input asp-for="FromDate" type="date" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="FromDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDate" class="control-label"></label>
                <input asp-for="ToDate" type="date" class="form-control" min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="ToDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HotelId"></label>
                <select asp-for="HotelId"
                        id="hotelSelect"
                        class="form-control"
                        asp-items="ViewBag.HotelId">
                    <option value="">-- wybierz hotel --</option>
                </select>
                <span asp-validation-for="HotelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomId"></label>
                <select asp-for="RoomId"
                        id="roomSelect"
                        class="form-control"
                        asp-items="ViewBag.RoomId">
                </select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz rezerwację" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById("hotelSelect").addEventListener("change", function () {
            let hotelId = this.value;
            let roomSelect = document.getElementById("roomSelect");

            roomSelect.innerHTML = "";

            if (hotelId === "") return;

            fetch("/Reservations/GetRoomsByHotel?hotelId=" + hotelId)
                .then(res => res.json())
                .then(data => {
                    data.forEach(room => {
                        let opt = document.createElement("option");
                        opt.value = room.id;
                        opt.text = room.number;
                        roomSelect.appendChild(opt);
                    });
                });
        });
    </script>
}
